<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LinearLayoutPassbookDesign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewDatePassbook"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="01/01/2024"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewAmountPassbook"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="0"
            android:text="TextView"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewNotePassbook"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewTypePassbook"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="0"
            android:text="Credit"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewAccountPassbook"
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Bank"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewRemainingBalPassbook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>